<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication5.MainWindow"
        Title="AvaloniaApplication5"
		Width="250"
		Height="200"
		Name="win">
		
	<Grid ShowGridLines="False" Margin="5"
      ColumnDefinitions="Auto"
      RowDefinitions="Auto, Auto, Auto,Auto,Auto">
		<Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">CPU稳定性测试器</Label>
		<ProgressBar Name="ProgressBar1" Grid.Column="0" Grid.Row="1" Margin="10"></ProgressBar>
		<Button Name="Button1" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="120" Click="start">开始测试</Button>
		<Button Name="Button2" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="120" Click="stop">停止测试</Button>
		<Label Name="Label1" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center">CPU核心数:</Label>
		
</Grid>
</Window>
